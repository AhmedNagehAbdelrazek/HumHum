@model HumHum.Models.FoodItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FoodItem</h4>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.FoodItemName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.FoodItemName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Restaurant)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Restaurant.Category)
                </dd>
            </dl>
        </div>
        <div class="col-md-4 offset-3 flex-row-reverse row">
